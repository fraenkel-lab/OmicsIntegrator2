var drag_handler = d3.drag()
    .on("start", drag_start)
    .on("drag", drag_drag)
    .on("end", drag_end);

drag_handler(node);

function drag_start(d) {
    if (!d3.event.active) { force.alphaTarget(0.3).restart(); }
    set_focus(d);
    d.fx = d.x;
    d.fy = d.y;
}

function drag_drag(d) {
  d.fx = d3.event.x;
  d.fy = d3.event.y;
}

function drag_end(d) {
  if (!d3.event.active) { force.alphaTarget(0); }
  remove_focus(d)
  d.fx = null;
  d.fy = null;
}

